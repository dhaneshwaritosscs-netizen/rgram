# ========================================
# R-GRAM BACKEND - FREE VERSION
# Environment Variables Configuration
# ========================================

# ========================================
# SERVER CONFIGURATION
# ========================================
PORT=5000
NODE_ENV=development

# ========================================
# DATABASE CONFIGURATION (MongoDB Atlas - FREE TIER)
# ========================================
# Get free MongoDB Atlas cluster: https://www.mongodb.com/atlas
MONGODB_URI=mongodb://localhost:27017/rgram

# ========================================
# JWT CONFIGURATION
# ========================================
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30

# ========================================
# FILE UPLOAD CONFIGURATION (Local Storage - FREE)
# ========================================
# For production, you can use free services like:
# - Cloudinary (free tier: 25GB storage, 25GB bandwidth/month)
# - Firebase Storage (free tier: 5GB storage, 1GB/day download)
# - Supabase Storage (free tier: 1GB storage, 2GB bandwidth/month)
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/gif,image/webp
ALLOWED_VIDEO_TYPES=video/mp4,video/avi,video/mov,video/wmv

# ========================================
# EMAIL CONFIGURATION (Gmail - FREE)
# ========================================
# Use Gmail with App Password (free)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@rgram.com

# ========================================
# OTP CONFIGURATION (Email-based - FREE)
# ========================================
OTP_EXPIRE_MINUTES=10
OTP_LENGTH=6

# ========================================
# RATE LIMITING
# ========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# CORS CONFIGURATION
# ========================================
CORS_ORIGIN=http://localhost:3000,http://localhost:8080,https://your-frontend-domain.com

# ========================================
# SECURITY CONFIGURATION
# ========================================
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8

# ========================================
# PAGINATION DEFAULTS
# ========================================
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=50

# ========================================
# LOGGING
# ========================================
LOG_LEVEL=info

# NextAuth
NEXTAUTH_SECRET=your-nextauth-secret-here
NEXTAUTH_URL=http://localhost:3000

# Cloudinary (for image uploads)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
